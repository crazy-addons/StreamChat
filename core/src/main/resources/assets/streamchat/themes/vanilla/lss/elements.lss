InputGroup {
  height: fit-content;
  width: 100%;

  .label-w-50 {
    left: 25% !important;
  }

  .label-w-75 {
    left: 12.5% !important;
  }

  .label {
    top: 0;
    font-size: 1;
    text-color: gray;
  }

  .input-w-50 {
    width: 50% !important;
  }

  .input-w-75 {
    width: 75% !important;
  }

  .input {
    top: 10;
    alignment-x: center;

    .invalid {
      border-color: red;
    }
  }

  .error {
    top: 32;
    alignment-x: center;
    text-color: red;
    font-size: 0.7;
  }
}

CustomCommand {
  .name {
    alignment-x: center;
    alignment-y: center;
  }

  .editButton {
    alignment-y: bottom;
    margin-bottom: 1;
    left: 63%;
    width: 6 !important;
    height: 6 !important;
  }

  .toggleButton {
    alignment-y: bottom;
    margin-bottom: 1;
    left: 81%;
    width: 6 !important;
    height: 6 !important;
  }
}

.enabled {
 border: 1 #d3d3d3;
}

.disabled {
  border: 1 #8d8d8d;
}

Help {
  height: fit-content;
  width: 80%;
  padding-bottom: 3;

  .title {
    top: 0;
    left: 0;
    font-size: 1.2;
  }

  .description {
    top: 10;
    left: 0;
    width: 100%;
    text-color: #dbdbdb;
  }
}